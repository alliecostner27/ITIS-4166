<%- include ('../partials/header') %>

<main>
    <div class="item-listing-container">
        <% items.forEach(item => { %>
            <div class="item">
                <a href="/items/<%= item.id %>">
                    <% if (item.image) { %>
                        <img src="<%= item.image.replace('../public/', '') %>" alt="<%= item.title %>">
                    <% } else { %>
                        <img src="/path/to/placeholder-image.jpg" alt="No image available">
                    <% } %>
                    <h3 class="item-title"><%= item.title %></h3>
                    <p class="item-condition">Condition: <%= item.condition %></p>
                    <p class="item-price">Price: $<%= item.price.toFixed(2) %></p>
                    <p class="item-seller">Seller: <%= item.seller %></p>
                </a>
            </div>
        <% }) %>
    </div>
</main>
<%- include ('../partials/footer') %>
