<%- include ('../partials/header') %>
<main>
  <div class="item-details-container">
    <div class="item-image">
      <!-- Assuming item.image contains just the image file name, like 'fourthWing.jpg' -->
      <img src="/<%= item.image %>" alt="<%= item.title %>" />
    </div>
    <div class="item-info">
      <h2 class="item-title"><%= item.title %></h2>
      <p class="item-condition">Condition: <%= item.condition %></p>
      <p class="item-price">Price: $<%= item.price %></p>
      <p class="item-offers">Total Offers: <%= item.offers %></p>
      <p class="item-seller">Seller: <%= item.seller %></p>
      <div class="item-buttons">
        <button class="edit-button" type ="submit" formmethod="GET" formaction="/items/<%= item.id%>/edit">Edit</button>
        <button class="delete-button" type ="submit" formmethod="POST" formaction="/items/<%= item.id%>?_method=DELETE">Delete</button>
      </div>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>
