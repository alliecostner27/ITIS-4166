<%- include('../partials/header') %>
<main>
  <div class="item-details-container">
    <div class="item-image">
      <img src="/uploads/<%= item.image %>" alt="<%= item.title %>" />
    </div>
    <div class="item-info">
      <h2 class="item-title"><%= item.title %></h2>
      <p class="item-condition">Condition: <%= item.condition %></p>
      <p class="item-price">Price: $<%= item.price %></p>
      <p class="item-offers">Total Offers: <%= item.offers %></p>
      <p class="item-seller">Seller: <%= item.seller %></p>

      <div class="item-buttons">
        <form method="GET" action="/items/<%= item.id %>/edit" class="edit-form">
          <button type="submit" class="edit-button">Edit</button>
        </form>

        <form method="POST" action="/items/<%= item.id %>?_method=DELETE" class="delete-form">
          <button type="submit" class="delete-button">Delete Item</button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>